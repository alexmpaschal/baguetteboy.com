<div class="form-group">
  <label for="title mt-2">题目</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group mt-2">
  <label for="description">描述</label>
  <textarea name="description" id="description" class="form-control" rows="2" style="height: 100%;"><%= article.description %></textarea>
</div>
<div class="form-group mt-2">
  <label for="markdown">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control" rows="20" style="height: 100%;"><%= article.markdown %></textarea>
</div>
<div class="mt-2">
  <a href="/blog/admin/?lang=ch" class="btn btn-light">取消</a>
  <button type="submit" class="btn btn-light">保存</button>
</div>